<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SamPlot.Views.AboutPage">

    <FlexLayout
        Padding="20"
        VerticalOptions="Center"
        Direction="Column"
        AlignItems="Center">

        <Image
            Source="samplot_icon.png"
            WidthRequest="400"/>

        <Label
            Text="Version 0.0.1"
            FontSize="Body"
            HorizontalOptions="Center"
            TextColor="Gray"
            Margin="0,0,0,10"/>

        <Label
            Text="SamPlot is a scientific plotting tool designed to help you visualize complex data with ease."
            FontSize="Title"
            HorizontalTextAlignment="Center"
            Margin="0,0,0,5"/>

        <Label
            Text="Powered by .NET MAUI and various open-source libraries."
            FontSize="Caption"
            TextColor="Gray"
            HorizontalTextAlignment="Center"
            Margin="0,0,0,20"/>

        <StackLayout Orientation="Horizontal"
                     Spacing="20"
                     HorizontalOptions="Center">
            <Button Text="Privacy Policy"
                    Command="{Binding OpenPrivacyPolicyCommand}"/>
            <Button Text="Support"
                    Command="{Binding OpenSupportCommand}"/>
        </StackLayout>

    </FlexLayout>
</ContentPage>
